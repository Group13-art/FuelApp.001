    <TextField fx:id="emailField" GridPane.columnIndex="3" GridPane.rowIndex="4" />

    <Label text="Phone:" GridPane.columnIndex="2" GridPane.rowIndex="6">
      <font>
         <Font name="System Bold Italic" size="12.0" />
      </font>
      <padding>
         <Insets right="2.0" />
      </padding></Label>
    <TextField fx:id="phoneField" GridPane.columnIndex="3" GridPane.rowIndex="6" />

    

    <Label text="Car Make:" GridPane.columnIndex="0" GridPane.rowIndex="3">
      <font>
         <Font name="System Bold Italic" size="12.0" />
      </font></Label>
    <ComboBox fx:id="carMakeCombo" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <Label text="Car Model:" GridPane.rowIndex="4">
      <font>
         <Font name="System Bold Italic" size="12.0" />
      </font></Label>
    <ComboBox fx:id="carModelCombo" GridPane.columnIndex="1" GridPane.rowIndex="4" />


    <Label text="Year:" GridPane.rowIndex="6">
      <font>
         <Font name="System Bold Italic" size="12.0" />
      </font></Label>
    <TextField fx:id="carYearField" GridPane.columnIndex="1" GridPane.rowIndex="6" />

    <Label text="Car Registration:" GridPane.rowIndex="10">
        <font>
            <Font name="System Bold Italic" size="12.0" />
        </font>
    </Label>
    <TextField fx:id="carRegField" GridPane.columnIndex="1" GridPane.rowIndex="10" />


    <Button onAction="#handleSubmit" text="Submit" GridPane.columnIndex="2" GridPane.rowIndex="12">
      <font>
