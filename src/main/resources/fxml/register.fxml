<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane fx:controller="fuelapp.controllers.RegisterController"
          xmlns:fx="http://javafx.com/fxml" alignment="CENTER" hgap="10" vgap="10">
    <Label text="Full Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="emailField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Phone:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="phoneField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="Car Make:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <TextField fx:id="carMakeField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <Label text="Car Model:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <TextField fx:id="carModelField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

    <Label text="Year:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
    <TextField fx:id="carYearField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

    <Button text="Submit" onAction="#handleSubmit" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
</GridPane>

