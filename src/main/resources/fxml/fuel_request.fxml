<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<GridPane alignment="CENTER" hgap="10" prefHeight="360.0" prefWidth="364.0" style="-fx-background-color: slategray;" vgap="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/24.0.1" fx:controller="fuelapp.controllers.FuelRequestController">
    <Label text="Select Car:" GridPane.columnIndex="0" GridPane.rowIndex="0">
      <font>
         <Font name="System Bold Italic" size="12.0" />
      </font></Label>
    <ComboBox fx:id="carComboBox" GridPane.columnIndex="1" GridPane.rowIndex="0" />

    <Label text="Fuel Price (R/litre):" GridPane.columnIndex="0" GridPane.rowIndex="1">
      <font>
         <Font name="System Bold Italic" size="12.0" />
      </font></Label>
    <Label fx:id="fuelPriceLabel" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Button onAction="#handleRequest" text="Request Fuel Quote" GridPane.columnIndex="1" GridPane.rowIndex="2">
      <font>
         <Font name="System Bold Italic" size="12.0" />
      </font></Button>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
